[Unit]
Description=%I - WSGI

[Service]
Type=simple
Environment=DJANGO_SETTINGS_MODULE=outpost.settings
Environment=DJANGO_LOCAL_CONFIGURATION=/etc/django/%i.py
Environment=PYTHONPATH=/var/www/wsgi/%i/src
WorkingDirectory=/var/www/wsgi/%i/src
User=www-data-api
RuntimeDirectory=gunicorn-asgi
ExecStart=/usr/bin/gunicorn3 -w 16 -k uvicorn.workers.UvicornWorker -b unix:/run/gunicorn-asgi/%i.sock outpost.asgi:application

[Install]
WantedBy=outpost-%i.target
