[Unit]
Description=%I - Celery Worker

[Service]
Type=simple
Environment=DJANGO_LOCAL_CONFIGURATION=/etc/django/%i.py
WorkingDirectory=/var/www/wsgi/%i/src
User=www-data-api
ExecStart=/usr/bin/python3 -m celery worker -E -A outpost.celery --loglevel=WARNING -n 'maintainance@%i' --autoscale=20,10 -Q maintainance --purge
LimitNOFILE=500000
LimitNPROC=500000

[Install]
WantedBy=outpost-%i.target
